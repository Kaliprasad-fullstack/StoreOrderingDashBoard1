                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">DC Name.</th>
                                <th scope="col">Store Code</th>
                                <th scope="col">Store Name</th>
                                @*<th scope="col">Store Manager</th>
        <th scope="col">Store Contact No.</th>*@
                                <th scope="col">Order No.</th>
                                <th scope="col">Order Date</th>
                                <th scope="col">Item Code</th>
                                <th scope="col">Item Name</th>
                                <th scope="col">Requested Quantity</th>
                                <th scope="col">Processed Flag</th>
                                <th scope="col">Processed Date</th>
                                <th scope="col">SO Approved Flag</th>
                                <th scope="col">So Number</th>
                                <th scope="col">Fullfilled Flag</th>
                                <th scope="col">fullfill quantity</th>
                                <th scope="col">Invoiced Flag</th>
                                <th scope="col">Invoice Number</th>
                                <th scope="col">Invoice Date</th>
                                <th scope="col">Due Date</th>
                                <th scope="col">CreateBy</th>
                                <th scope="col">CreatedOn</th>
                                <th scope="col">Tax Code</th>
                                <th scope="col">Tax Rate</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Tax Amount</th>
                                <th scope="col">GrossAmount</th>
                                <th scope="col">Tax Liable</th>
                                <th scope="col">Item Category</th>
                                <th scope="col">Invoice Quantity</th>
                                @*<th scope="col">Open</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.FinalizedReports != null)
                            {
                                int i = 1;
                                foreach (FinalReport head in ViewBag.FinalizedReports)
                                {
                            <tr>
                                <th scope="row">@i</th>
                                <td>@head.dc_name</td>
                                <td>@head.StoreCode</td>
                                <td>@head.StoreName</td>
                                @*<td>@head.StoreManager</td>
        <td>@head.StoreContactNo</td>*@
                                <td>@head.OrderNo</td>
                                <td>@(head.OrderDate != null ? head.OrderDate.Value.ToString("dd/MM/yyyy hh:mm", System.Globalization.CultureInfo.InvariantCulture) : "")</td>
                                <td>@head.SKUCode</td>
                                <td>@head.SKUName</td>
                                <td>@head.requested_Quantity</td>
                                <td>@head.Processed_Flag</td>
                                <td>@(head.ProcessedDate != null ? head.ProcessedDate.Value.ToString("dd/MM/yyyy hh:mm", System.Globalization.CultureInfo.InvariantCulture) : "")</td>
                                <td>@head.SO_Approved_Flag</td>
                                <td>@head.SoNumber</td>
                                <td>@head.Fullfilled_Flag</td>
                                <td>@head.fullfill_quantity</td>
                                <td>@head.Invoiced_Flag</td>
                                <td>@head.Invoice_Number</td>
                                <td>@head.InvoiceDate</td>
                                <td>@head.DueDate</td>
                                <td>@head.CreateBy</td>
                                <td>@(head.CreatedOn != null ? head.CreatedOn.Value.ToString("dd/MM/yyyy hh:mm", System.Globalization.CultureInfo.InvariantCulture) : "")</td>
                                <td>@head.TaxCode</td>
                                <td>@head.TaxRate</td>
                                <td>@head.Amount</td>
                                <td>@head.TaxAmount</td>
                                <td>@head.GrossAmount</td>
                                <td>@head.TaxLiable</td>
                                <td>@head.ItemCategory</td>
                                <td>@head.inv_Quantity</td>
                                @*<td>
            <input type="button" class="btn btn-default" value="Open" data-target="#modelWindow" data-toggle="modal" onclick="OpenSaveAsDraft(@head.Id)" />
        </td>*@
