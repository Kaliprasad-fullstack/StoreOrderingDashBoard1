@using DAL
@{
    ViewBag.Title = "Finlized Order Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string startdate = ViewData["StartDate"].ToString();
    string enddate = ViewData["EndDate"].ToString();
    string RFPLID = ViewData["RFPLID"] != null ? ViewData["RFPLID"].ToString() : "";
    List<SelectListItem> listItems = new List<SelectListItem>();
  
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<div class="right_col" role="main">
    <!-- top tiles -->
    <div class="page-title">
        <div class="title_left">
            <h3>Finlized Order Delete</h3>
        </div>
    </div>
    <!-- /top tiles -->
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <form id="demo-form" method="post" action="@Url.Action("OrderDeleteNew","Order")">
                        @Html.AntiForgeryToken()
