                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <label>DC</label>
                                @Html.ListBox("SelectedDC", (MultiSelectList)ViewBag.DCs, new { size = 4, @class = "form-control" })
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-12">
