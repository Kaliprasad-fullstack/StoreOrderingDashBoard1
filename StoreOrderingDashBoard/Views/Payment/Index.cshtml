
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="right_col" role="main">
    <div class="row">
        <div class="page-title">
            <div class="title_left">
                <h3>Make Payment</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @using (Html.BeginForm("MakePayment", "Payment", FormMethod.Post, new { @class = "form-horizontal form-label-left", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.Label("Payment Type", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.DropDownList("PaymentType", new SelectList(new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "Credit Card", Value = "CreditCard" },
                                        new SelectListItem { Text = "Debit Card", Value = "DebitCard" },
                                        new SelectListItem { Text = "PayPal", Value = "PayPal" },
                                        new SelectListItem { Text = "Bank Transfer", Value = "BankTransfer" }
                                    }, "Value", "Text"),
                                    new { @class = "form-control", @id = "paymentType" })
                                </div>
                            </div>

                            <!-- Payment Method Sections -->
                            <!-- Credit Card Payment Section -->
                            <div id="creditCardSection" class="payment-section">
                                <div class="form-group">
                                    @Html.Label("Card Number", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="CreditCardNumber" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Expiry Date", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="ExpiryDate" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("CVV", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="CVV" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <!-- Debit Card Payment Section -->
                            <div id="debitCardSection" class="payment-section">
                                <div class="form-group">
                                    @Html.Label("Card Number", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="DebitCardNumber" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Expiry Date", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="DebitExpiryDate" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("CVV", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="DebitCVV" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <!-- PayPal Payment Section -->
                            <div id="payPalSection" class="payment-section">
                                <div class="form-group">
                                    @Html.Label("PayPal Email", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="email" name="PayPalEmail" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <!-- Bank Transfer Payment Section -->
                            <div id="bankTransferSection" class="payment-section">
                                <div class="form-group">
                                    @Html.Label("Account Number", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="BankAccountNumber" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Sort Code", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="BankSortCode" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Bank Name", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" name="BankName" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <!-- Common Fields -->
                            <div class="form-group">
                                @Html.Label("Order No", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" name="OrderNo" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Contact No", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" name="ContactNo" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Payment Description", htmlAttributes: new { @class = "control-label col-md-3 col-sm-6 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <textarea name="PaymentDescription" class="form-control"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <br />
                                    <input type="submit" value="Submit" class="btn btn-success dataTable-btn" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('paymentType').addEventListener('change', function () {
        // Hide all payment sections
        document.querySelectorAll('.payment-section').forEach(function (section) {
            section.style.display = 'none';
        });

        // Show the selected payment section
        var selectedMethod = this.value;
        if (selectedMethod) {
            document.getElementById(selectedMethod + 'Section').style.display = 'block';
        }
    });
</script>