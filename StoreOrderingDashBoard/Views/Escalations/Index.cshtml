@using DAL
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="row">
        <div class="page-title">
            <div class="title_left">
                <h3>Escalation @*<small>Some examples to get you started</small>*@</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        @*<h2>Default Example <small>Stores</small></h2>*@
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <a class="btn btn-success datatable-btn" href="@Url.Action("AddEscalationLevel","Escalations")">Add Escalation Level</a>
                    <div class="x_content">
                        <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 157px;">Level ID</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Store Code: activate to sort column ascending" style="width: 115px;">Process ID</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Store Email: activate to sort column ascending" style="width: 115px;">Trigger Type ID</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Store Email: activate to sort column ascending" style="width: 115px;">Trigger Time</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Edit: activate to sort column ascending" style="width: 117px;">Edit</th>
                                    @*<th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Delete: activate to sort column ascending" style="width: 60px;">Store Plan</th>*@
                                    @*<th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Plans: activate to sort column ascending" style="width: 60px;">Plans</th>*@
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Users: activate to sort column ascending" style="width: 60px;">Trigger Actions</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Delete: activate to sort column ascending" style="width: 60px;">Disable</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.escalationLevels != null)
                                {
                                    int sr = 1;
                                    foreach (EscalationLevelMaster ob in ViewBag.escalationLevels)
                                    {
                                        <tr role="row" class="@(sr%2!=0?"Odd":"even")">
                                            <td>
                                                @ob.LevelID
                                            </td>
                                            <td>
                                                @ob.ProcessId
                                            </td>
                                            <td>
                                                @ob.TriggerType
                                            </td>
                                            <td>
                                                @ob.TriggerTime.ToString()
                                            </td>
                                            <td>
                                                <a class="btn btn-success datatable-btn" href="@Url.Action("EditEscalationLevel","Escalations",new { Id=ob.Id})">Edit</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-primary datatable-btn" href="@Url.Action("EscalationActions","Escalations",new { LevelID = ob.LevelID })">Actions</a>
                                            </td>
                                            <td>
                                                @if (ob.IsDeleted)
                                                {
                                                    <button class="btn btn-info datatable-btn" type="button" onclick="Disable(@ob.Id);" value="@ob.IsDeleted">Enable</button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-dark datatable-btn" type="button" onclick="Disable(@ob.Id);" value="@ob.IsDeleted">Disable</button>
                                                }
                                            </td>
                                        </tr>
                                        sr++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    function Delete(Id) {
        var a = confirm("Are you sure want to delete store?");
        if (a) {
                $.ajax({
                    url: '@Url.Action("DeleteStore", "Store")',
                    type: "post",
                    datatype: "json",
                    data: {
                        "Store": Id
                    },
                    success: function (response) {
                        if (response == "true" || response==true) {
                            location.reload();
                        }
                    },
            })
        }
        else {

        }
    }
    function plans(CustomerPlanId, UserId) {
        var drop = CustomerPlanId;
        if (!isNaN(drop)) {
            $('#partial').load();
            $("#Custom_Plan_Model").modal('show');
            var route = '@Url.Action("MenuRightsForUser", "Store")?UserId=' + UserId + '&custplanid=' + drop + '';
            $('#partial').load(route);
        }
        else {
            $("#Custom_Plan_Model").modal('hide');
            alert("Please select plan")
        }
    }
</script>

