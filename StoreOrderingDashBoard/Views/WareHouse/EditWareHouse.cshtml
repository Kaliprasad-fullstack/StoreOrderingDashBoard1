@model DAL.WareHouseDC
@using DAL
@{
    ViewBag.Title = "EditWareHouse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="row">
        <div class="page-title">
            <div class="title_left">
                <h3>Add Customer</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>WareHouse<small> Form</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="@Url.Action("EditWareHouse","WareHouse")" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Customer Name <span class="required">*</span>
                                </label>
                                <input type="hidden" name="Id" value="@Model.Id" />
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" id="first-name" required="required" name="Name" class="form-control col-md-7 col-xs-12" value="@Model.Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Company Name <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">

                                    <select required="required" name="Company.Id" class="form-control col-md-7 col-xs-12">
                                        <option value="">Select Company Name</option>
                                        @if (ViewBag.Companies != null)
                                        {
                                            foreach (Company com in ViewBag.Companies)
                                            {
                                                if (Model.Company.Id == com.Id)
                                                {
                                                    <option value="@com.Id" selected>@com.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@com.Id">@com.Name</option>
                                                }

                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Location <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @(Html.DropDownList("LocationId", new SelectList(ViewBag.Location, "LocationId", "Name", Model.LocationId), "--Choose Location---", new { @class = "form-control col-md-7 col-xs-12", required = "required" }))
                                    @*<select required="required" name="CustomerPlan.Id" class="form-control col-md-7 col-xs-12">
                                        <option value="">Select Customer Plan</option>
                                        @if (ViewBag.CustomerPlan != null)
                                        {
                                            foreach (Locations plan in ViewBag.CustomerPlan)
                                            {
                                                if (Model.LocationId == ((null)plan.Id))
                                                                            {
                                                    <option value="@plan.LocationId" selected>@plan.Name</option>
                                                }
                                                                            else
                                                                            {
                                                    <option value="@plan.Id">@plan.PlanName</option>
                                                }

                                            }
                                        }
                                    </select>*@
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button class="btn btn-primary" type="reset">Reset</button>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

